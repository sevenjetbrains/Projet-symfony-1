{% extends "base.html.twig" %}
{% block title %}les exercices de cours
	{{classes.title}}
{% endblock %}
{% block body %}
	<div class="container">
		<nav aria-label="breadcrumb mt-2 mb-2">
			<ol class="breadcrumb">
				<li class="breadcrumb-item active" aria-current="page">
					<a href="{{path('student_index')}}" class="btn btn-info">

						<i class="fas fa-angle-left"></i>Retour</a>


				</li>

			</ol>
		</nav>

		<div class="row mt-1">
			{% for exercise in classes.exercise %}
				<div class="col-4 mt-2">
					<div class="card" style="width: 18rem;">
						<div class="card-header">
							{{exercise.title}}
						</div>
						<ul class="list-group list-group-flush">
							<li class="list-group-item">
								<strong>type :</strong>
								{{exercise.type}}

							</li>
							<li class="list-group-item">
								<strong>ajouter le :</strong>
								{{exercise.dateCreate | date('d-m-Y')}}


							</li>
						</ul>
						<div class="card-body">
							{% if exercise.type =='normal' %}
								<a href="{{path('student_exercise_normal',{'id':exercise.id})}}" class="card-link btn btn-lg btn-block btn-outline-success ml-1">


									<i class="fas fa-eye mr-2"></i>voir</a>

							{% else %}

								<a href="{{path('student_exercise_parson',{'id':exercise.id})}}" class="card-link btn btn-lg btn-outline-success">


									<i class="fas fa-eye mr-1"></i>voir</a>
								<a href="#" class="card-link btn btn-lg btn-outline-success">

									<i class="fas fa-pen-alt mr-1"></i>r√©soudre</a>


							{% endif %}


						</div>

					</div>

				</div>
			{% endfor %}
		</div>
        {% if classes.exercise is empty %}
        
<div class="jumbotron">
	<h1 class="display-4">ce cours ne contient pas d'exercice </h1>
	
	<hr class="my-4">
	
</div>

        
        
        
        {% endif %}
        
	</div>


{% endblock %}
