{% extends "partials_teacher/base.html.twig" %}
{% block title %}Statistique
{% endblock %}
{% block body %}
	<div class="container">
		<nav aria-label="breadcrumb mt-2 mb-2">
			<ol class="breadcrumb">
				<li class="breadcrumb-item active" aria-current="page">
					<a href="#" id="back" class="btn btn-info">

						<i class="fas fa-angle-left"></i>Retour</a>


				</li>


			</ol>
		</nav>

		{% for classe in classes %}
			{% set cp = 0 %}
			<div class="jumbotron mb-2">
				<h1 class="display-4">
					<strong>cours :</strong>
					{{classe.title}}</h1>
				<hr class="my-4">
				<div class="row">
					{% for exercise in classe.exercise %}
						{% for list in exercise.listStudentTry %}
							{% if list.status == true %}
								{% set cp = cp + 1 %}
							{% endif %}


						{% endfor %}
						<div class="col-4">


							<div class="card">
								<div class="card-header bg-success">{{exercise.title}}</div>

<div class="card-body bg-secondary">

<h3>
									<p class="card-text bg-secondary ">
										<span class="badge badge-pill badge-info">{{cp}}
											/
											{{exercise.listStudentTry | length}}</span>
<span class="badge badge-primary">taux réussite</span>


									</p><h3>

<a href="{{path('teacher_stat_detail',{'id':exercise.id})}}" class="btn btn-outline-success">détail ...</a>

								</div>
							</div>
						</div>

					{% endfor %}
				</div>
			</div>


		{% endfor %}
	</div>
{% endblock %}
