{% extends "partials_teacher/base.html.twig" %}
{% block title %}solution d'exercice
{% endblock %}
{% block body %}
	<div class="container">
		<nav aria-label="breadcrumb mt-2">
			<ol class="breadcrumb">
				<li class="breadcrumb-item active" aria-current="page">
<a href="{{path('exercise_index')}}" class="btn btn-info">

	<i class="fas fa-angle-left"></i>Retour</a>


				</li>

			</ol>
		</nav>

		<div class="row mb-2">
			<div class="col-md-8 offset-md-2">


				<div class="jumbotron">
					<h3 class="display-4">{{exercise.title}}</h3>
					<hr class="my-4">
					{% for line in exercise.linesExercise %}
						<div class="alert alert-danger" role="alert">
							{{line.instruction}}
						</div>
					{% endfor %}


					<hr class="my-4">

					<a class="btn btn-primary btn-lg" href="{{path('solution_create',{'id' : exercise.id })}}" role="button">Ajouter une Solution</a>

				</div>


			</div>
		</div>
<hr class="my-4">

		{% for key , final in finals %}
			<div class="row mb-2">
				<div class="col-md-8 offset-md-2">


					<div class="jumbotron">
<h3 class="display-4">Solution 0{{loop.index}}
{% set cp = loop.index - 1 %}
	</h3>

						<hr class="my-4">
						{% for tab in final %}

							<div class="alert alert-success" role="alert">
								{{ tab }}

							</div>
						{% endfor %}


						<hr class="my-4">

<a class="btn btn-primary btn-lg" href="{{path('solution_remove',{'id1' :colSolution[cp].id ,'id2' : exercise.id })}}" role="button">Supprimer</a>



					</div>


				</div>
			</div>
		{% endfor %}


	</div>
{% endblock %}
